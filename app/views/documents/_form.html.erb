
<div class="ui middle aligned grid">
    <div class="column">
        <%= form_for @document, html: { class:'ui form fluid segment' } do |f| %>
            <div class="field">
                <%= f.label :name, "Titulo de tu mensaje", class: 'label'%>
                <%= f.text_field :name, class: 'field', placeholder: "Titulo" %>
            </div>
            <div class="field">
                <%= f.label :uploader_name, "Tu nombre"%>
                <%= f.text_field :uploader_name, class: 'field', placeholder: "Nombre Apellido" %>
            </div>
            <div class="field">
                <%= f.label :email, "Tu correo", class: 'label'%>
                <%= f.text_field :email, class: 'field', placeholder: "soloun@ejemplo.com" %>
            </div>

            <div class="field">
                <%= f.label :attachment, "Anexa un documento (opcional)"%>
                <%= f.file_field :attachment, class:'ui basic left action button' %>
            </div>

            <div class="field">
                <%= f.label :description, "Mensaje"%>
                <%= f.text_area :description, class: 'field', placeholder: "Escribe aquÃ­ el cuerpo de tu mensaje." %>
            </div>



            <%= f.submit "Enviar mensaje", class: "ui blue button"%>
        <% end %>
    </div>
</div>
